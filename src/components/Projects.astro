---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import TypeScript from "./icons/typeScript.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white", // Este ya destaca bien con fondo negro
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white", // Mantiene el color original oscuro de Tailwind CSS
    icon: Tailwind,
  },
  typescript: {
    name: "TypeScript",
    class: "bg-blue-900 text-white", // Un azul oscuro que resalta el azul del ícono TypeScript
    icon: TypeScript,
  }
};


const PROJECTS = [
  {
    title: "METACHAT",
    description:
      "Aplicación de chat en tiempo real. Creada con Next.js, Upstash, TypeScript, Redis, Tailwind, NextAuth.",
    
    github: "https://github.com/isleyva/Meta-Chat",
    image: "/projects/metachat.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.typescript],
    warning: "Para poner en marcha este proyecto se ha de configurar una instancia en Upstash"
  },
  {
    title: "CRYPTO BASE",
    description:
      "Aplicación para consulta de criptomonedas. Creada con Next.js, CoinGecko API, Tailwind y Firebase.",
    link: "https://crypto-base.vercel.app/",
    github: "https://github.com/isleyva/Crypto-base",
    image: "/projects/criptobase.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github, warning }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
      <div class="w-full md:w-1/2">
        <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
          <img alt={title} class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
        </div>
      </div>

      <div class="w-full md:w-1/2 md:max-w-lg">
        <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
          {title}
        </h3>
        <div class="flex flex-wrap mt-2">
          <ul class="flex flex-row mb-2 gap-x-2">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                >
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>

          <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
          
          {warning && (
            <div class="mt-4 text-yellow-500 flex items-center gap-x-2">
              <span>⚠️</span>
              <span>{warning}</span>
            </div>
          )}

          <footer class="flex items-end justify-start mt-4 gap-x-4">
            {github && (
              <LinkButton href={github}>
                <GitHub class="size-6" />
                Code
              </LinkButton>
            )}
            {link && (
              <LinkButton href={link}>
                <Link class="size-4" />
                Preview
              </LinkButton>
            )}
          </footer>
        </div>
      </div>
    </article>
    ))
  }
</div>




